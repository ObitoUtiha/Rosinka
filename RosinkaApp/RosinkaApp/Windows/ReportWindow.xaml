<Window x:Class="RosinkaApp.Windows.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RosinkaApp.Windows"
        mc:Ignorable="d"
        Title="Отчёт" MinHeight="300" MinWidth="300"  MaxHeight="300" MaxWidth="300" Height="300" Width="300">
    <StackPanel>
        <TextBlock FontSize="20" HorizontalAlignment="Center" TextAlignment="Center" Text="Введите пол ребёнка:"/>
        <TextBox x:Name="ChildMaleTb" TextAlignment="Center" Margin="10,0,10,30"></TextBox>
        <TextBlock FontSize="20" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Text="Введите дату окончания заведения:"/>
        <DatePicker x:Name="ChildEndDateTb" HorizontalContentAlignment="Center" Margin="10,0,10,30"></DatePicker>
        <Button x:Name="SaveBtn" Margin="10,0,10,30" Content="Сохранить личное дело 💾"  Click="SaveBtn_Click"></Button>
    </StackPanel>
</Window>
